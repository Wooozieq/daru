<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#121212">

    <!-- Кнопка Включить/Выключить всё -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnScanToggle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Start Scan"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/indicatorScan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/holo_red_dark" />
    </LinearLayout>

    <!-- Кнопка Звонки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnCallToggle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Start Call Monitor"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/indicatorCall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/holo_red_dark" />
    </LinearLayout>

    <!-- Кнопка Клавиатура -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnKeyboardToggle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Start Keyboard Monitor"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/indicatorKeyboard"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/holo_red_dark" />
    </LinearLayout>

    <!-- Кнопка отправки лога -->
    <Button
        android:id="@+id/btnSendLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send & Copy Log"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF" />

</LinearLayout>
            

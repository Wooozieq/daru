
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#222831</item>
        <item name="colorPrimaryDark">#1e1e2e</item>
        <item name="colorAccent">#00adb5</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">#00adb5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
